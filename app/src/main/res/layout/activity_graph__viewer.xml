<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_Fact.Graph_Viewer"
    android:background="#c4d4ed"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/graph_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Area Details- Sector 62"
        android:textColor="#e02a2a"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/graph_nc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="236dp"
        android:text="Chem1"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.moos.library.CircleProgressView
        android:id="@+id/progressView_overall"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:circleBroken="true"
        app:end_color="@color/purple_start"
        app:isTracked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:start_color="@color/purple_end"
        app:track_width="18dp" />

    <TextView
        android:id="@+id/graph_nc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="324dp"
        android:text="Chem2"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.moos.library.HorizontalProgressView
        android:id="@+id/chem1_progress"
        android:layout_width="320dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="8dp"
        app:corner_radius="12dp"
        app:end_color="@color/red_end"
        app:end_progress="60"
        app:isTracked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressTextColor="#696969"
        app:start_color="@color/red_start"
        app:trackColor="#f4f4f4"
        app:track_width="12dp" />

    <TextView
        android:id="@+id/graph_nc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="396dp"
        android:text="Chem3"
        android:textSize="15dp"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.moos.library.HorizontalProgressView
        android:id="@+id/chem2_progress"
        android:layout_width="320dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="8dp"
        app:corner_radius="12dp"
        app:end_color="@color/red_end"
        app:end_progress="60"
        app:isTracked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressTextColor="#696969"
        app:start_color="@color/red_start"
        app:trackColor="#f4f4f4"
        app:track_width="12dp" />

    <com.moos.library.HorizontalProgressView
        android:id="@+id/chem3_progress"
        android:layout_width="320dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="8dp"
        app:corner_radius="12dp"
        app:end_color="@color/red_end"
        app:end_progress="60"
        app:isTracked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressTextColor="#696969"
        app:start_color="@color/red_start"
        app:trackColor="#f4f4f4"
        app:track_width="12dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_pro1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="488dp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ef2f2f"
        fancy:fb_focusColor="#ef2f2f"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_text="PROCEED"
        fancy:fb_textColor="#FFFFFF" />


</android.support.constraint.ConstraintLayout>